<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kütüphane Otomasyonu</title>

    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Admin/css/combined.css" rel="stylesheet" />
    
    @RenderSection("Styles", required: false)
</head>
<body data-theme="dark">
    <!-- Mobile Sidebar Toggle -->
    <button class="btn btn-primary d-md-none sidebar-toggle position-fixed">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Sidebar -->
    <nav class="sidebar">
        <div class="sidebar-sticky">
            <div class="sidebar-header">
                <h4><i class="fas fa-book-reader me-2"></i>Kütüphane Otomasyonu</h4>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Kitaplar" ? "active" : "")" href="@Url.Action("Kitaplar", "Home")">
                        <i class="fas fa-book"></i>Kitaplar
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Ogrenciler" ? "active" : "")" href="@Url.Action("Ogrenciler", "Home")">
                        <i class="fas fa-user-graduate"></i>Öğrenciler
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Personeller" ? "active" : "")" href="@Url.Action("Personeller", "Home")">
                        <i class="fas fa-users"></i>Personeller
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Oduncver" ? "active" : "")" href="@Url.Action("Oduncver", "Home")">
                        <i class="fas fa-hand-holding-heart"></i>Ödünç İşlemleri
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Hakkimizda" ? "active" : "")" href="@Url.Action("Hakkımızda", "Home")">
                        <i class="fas fa-info-circle"></i>Hakkımızda
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "NasilKullanilir" ? "active" : "")" href="@Url.Action("NasılKullanılır", "Home")">
                        <i class="fas fa-question-circle"></i>Nasıl Kullanılır
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="@(ViewContext.RouteData.Values["Action"].ToString() == "Hakkimizda" ? "about-page" : "main-content")">
        @if (ViewContext.RouteData.Values["Action"].ToString() == "Hakkimizda")
        {
            @RenderBody()
        }
        else
        {
            <div class="container-fluid">
                @RenderBody()
            </div>
        }
    </main>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Admin/js/combined.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
