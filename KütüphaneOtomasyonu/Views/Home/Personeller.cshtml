@model KütüphaneOtomasyonu.DataModel.Kakitap
@{
    ViewBag.Title = "Personeller";
}

<h2>Personeller</h2>
<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border: 1px solid #ddd;
    }

    th {
        background-color: #f4f4f4;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    /* Başlık stili */
    h2 {
        color: #333;
        font-family: Arial, sans-serif;
    }
</style>
<style>
    .forms-wrapper {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start;
        gap: 20px;
        margin: 40px auto;
        max-width: 100%;
    }

    .form-card {
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        padding: 20px;
        width: 300px;
        box-sizing: border-box;
        font-family: 'Segoe UI', sans-serif;
        flex-shrink: 0;
    }

        .form-card form {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .form-card label {
            font-weight: bold;
        }

        .form-card input,
        .form-card select {
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            width: 100%;
        }

            .form-card input[type="submit"] {
                background-color: #007acc;
                color: white;
                border: none;
                padding: 10px;
                font-weight: bold;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .form-card input[type="submit"]:hover {
                    background-color: #005fa3;
                }

        .form-card h3 {
            text-align: center;
            color: #333;
        }

    .guncelle-wrapper {
        width: 100%;
        display: flex;
        justify-content: flex-end;
        margin-top: 20px;
    }
</style>

<div class="forms-wrapper">
    <div class="form-card">
        <h3>Kitap Ekle</h3>
        <form action="/Home/Personeller" method="post">
            <label>Personel Adı :</label>
            <input type="text" name="pAD" maxlength="50" />
            <label>Personel SoyAd :</label>
            <input type="text" name="pSoyad" maxlength="50" />
            <label>Email : </label>
            <input type="email" name="pEmail" maxlength="100" />
            <label>Şifre : </label>
            <input type="password" name="pSifre" maxlength="100" />
            <input type="submit" name="PersonelEkle" value="Ekle" />
        </form>
    </div>

   

    @if (Model.secilipersonel != null)
    {
        <div class="form-card">
            <h3>Kitap Güncelle</h3>
            <form action="/Home/Personeller" method="post">
                <input type="hidden" name="perid" value="@Model.secilipersonel.PersonelID" />
                <label>Personel Adı :</label>
                <input type="text" name="pAD" maxlength="50" value="@Model.secilipersonel.Ad" />
                <label>Personel SoyAd :</label>
                <input type="text" name="pSoyad" maxlength="50" value="@Model.secilipersonel.Soyad" />
                <label>Email : </label>
                <input type="email" name="pEmail" maxlength="100" value="@Model.secilipersonel.Email" />
                <label>Şifre : </label>
                <input type="password" name="pSifre" maxlength="100" value="@Model.secilipersonel.Sifre" />
                <input type="submit" name="pGuncelle" value="Güncelle" />
            </form>
        </div>
    }
</div>





<table>
    <tr>
        <td>Personel Ad</td>
        <td>Personel Soyad</td>
        <td>Email</td>
        <td>Oluşturma Tarihi</td>
        <td>Güncelleme Tarihi</td>
        <td>İşlemler</td>
    </tr>
    @foreach (var item in Model.Personels)
    {
        if (@item.AktifMi == true)
        {
            <tr style="height:auto">
                <td style="width:auto">@item.Ad</td>
                <td>@item.Soyad</td>
                <td>@item.Email</td>
                <td>@item.OlusturmaTarihi</td>
                <td>@item.GuncellemeTarihi</td>
                <td>
                    <form action="/Home/Personeller" method="post">
                        <input type="hidden" name="pAd" value="@item.Ad" />
                        <input type="submit" name="perBul" value="Bul" />
                    </form>
                    <form action="/Home/Personeller" method="post">
                        <input type="hidden" name="PersonelID" value="@item.PersonelID"/>
                        <input type="submit" name="PersonelSil" value="Sil" />
                    </form>
                </td>
            </tr>
        }
    }
</table>
