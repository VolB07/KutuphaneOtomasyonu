@{
    ViewBag.Title = "Hakkımızda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/Hakkımızda/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
}

<div class="about-page">
    <!-- Intro Animation -->
    <div class="intro-animation">
        <div class="logo-container">
            <h1 class="logo">CODEX</h1>
            <p class="slogan">Geleceği Kodluyoruz</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="about-page-content">
        <section class="hero">
            <h1 class="reveal-text">Codex Ekibi</h1>
            <p class="subtitle reveal-text">Yazılım Dünyasının Geleceğini Şekillendiren Ekip</p>
        </section>

        <!-- Team Members Grid -->
        <section class="team-grid">
            <!-- Project Manager -->
            <div class="team-card" data-role="project-manager">
                <div class="card-content">
                    <div class="profile-image">
                        <img src="https://via.placeholder.com/150" alt="Volkan BÜLBÜL">
                    </div>
                    <h3>Volkan BÜLBÜL</h3>
                    <p class="role">Proje Yöneticisi</p>
                    <p class="bio">Yazılım projelerini başarıyla yöneten, vizyoner lider.</p>
                    <div class="social-links">
                        <a href="#" class="social-icon"><i class="fab fa-github"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-linkedin"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>

            <!-- Front-End & Database Developer -->
            <div class="team-card" data-role="frontend">
                <div class="card-content">
                    <div class="profile-image">
                        <img src="https://via.placeholder.com/150" alt="Kerem Cem AKTAŞ">
                    </div>
                    <h3>Kerem Cem AKTAŞ</h3>
                    <p class="role">Front-End & Veritabanı Geliştiricisi</p>
                    <p class="bio">Modern web teknolojileri ve veritabanı yönetimi konusunda uzman geliştirici.</p>
                    <div class="social-links">
                        <a href="#" class="social-icon"><i class="fab fa-github"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-linkedin"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>

            <!-- Front-End Developers -->
            <div class="team-card" data-role="frontend">
                <div class="card-content">
                    <div class="profile-image">
                        <img src="https://via.placeholder.com/150" alt="Batuhan">
                    </div>
                    <h3>Batuhan</h3>
                    <p class="role">Front-End Geliştirici</p>
                    <p class="bio">Modern web teknolojileri ile kullanıcı deneyimini en üst düzeye çıkaran geliştirici.</p>
                    <div class="social-links">
                        <a href="#" class="social-icon"><i class="fab fa-github"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-linkedin"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>

            <div class="team-card" data-role="frontend">
                <div class="card-content">
                    <div class="profile-image">
                        <img src="https://via.placeholder.com/150" alt="Elif Nehir ALTINSOY">
                    </div>
                    <h3>Elif Nehir ALTINSOY</h3>
                    <p class="role">Front-End Geliştirici</p>
                    <p class="bio">Yaratıcı ve yenilikçi çözümler üreten front-end uzmanı.</p>
                    <div class="social-links">
                        <a href="#" class="social-icon"><i class="fab fa-github"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-linkedin"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>

            <!-- Back-End Developers -->
            <div class="team-card" data-role="backend">
                <div class="card-content">
                    <div class="profile-image">
                        <img src="https://via.placeholder.com/150" alt="Durdane Gül ZENGİN">
                    </div>
                    <h3>Durdane Gül ZENGİN</h3>
                    <p class="role">Back-End Geliştirici</p>
                    <p class="bio">Güçlü ve ölçeklenebilir sistemler tasarlayan back-end uzmanı.</p>
                    <div class="social-links">
                        <a href="#" class="social-icon"><i class="fab fa-github"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-linkedin"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>

            <div class="team-card" data-role="backend">
                <div class="card-content">
                    <div class="profile-image">
                        <img src="https://via.placeholder.com/150" alt="Miray Eşsiz">
                    </div>
                    <h3>Miray Eşsiz</h3>
                    <p class="role">Back-End Geliştirici</p>
                    <p class="bio">Karmaşık sistemleri basitleştiren ve optimize eden geliştirici.</p>
                    <div class="social-links">
                        <a href="#" class="social-icon"><i class="fab fa-github"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-linkedin"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>

            <div class="team-card" data-role="backend">
                <div class="card-content">
                    <div class="profile-image">
                        <img src="https://via.placeholder.com/150" alt="Umut BOZTEPE">
                    </div>
                    <h3>Umut BOZTEPE</h3>
                    <p class="role">Back-End Geliştirici</p>
                    <p class="bio">Yüksek performanslı sistemler geliştiren uzman.</p>
                    <div class="social-links">
                        <a href="#" class="social-icon"><i class="fab fa-github"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-linkedin"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </section>

        <section class="stars-section">
            <div class="stars-container">
            </div>
        </section>
    </div>

    <div class="modal" id="teamModal">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Hakkımızda/script.js"></script>
}


