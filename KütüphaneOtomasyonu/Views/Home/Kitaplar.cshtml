@model KütüphaneOtomasyonu.DataModel.Kakitap
@{
    ViewBag.Title = "Kitaplar";
}
<style>
    /* Genel tablo stili */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border: 1px solid #ddd;
    }

    th {
        background-color: #f4f4f4;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    /* Başlık stili */
    h2 {
        color: #333;
        font-family: Arial, sans-serif;
    }
</style>
<style>
    .forms-wrapper {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start;
        gap: 20px;
        margin: 40px auto;
        max-width: 100%;
    }

    .form-card {
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        padding: 20px;
        width: 300px;
        box-sizing: border-box;
        font-family: 'Segoe UI', sans-serif;
        flex-shrink: 0;
    }

        .form-card form {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .form-card label {
            font-weight: bold;
        }

        .form-card input,
        .form-card select {
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            width: 100%;
        }

            .form-card input[type="submit"] {
                background-color: #007acc;
                color: white;
                border: none;
                padding: 10px;
                font-weight: bold;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .form-card input[type="submit"]:hover {
                    background-color: #005fa3;
                }

        .form-card h3 {
            text-align: center;
            color: #333;
        }

    .guncelle-wrapper {
        width: 100%;
        display: flex;
        justify-content: flex-end;
        margin-top: 20px;
    }
</style>

@if (ViewBag.HataMesaji != null)
{
    <div class="alert alert-danger">@ViewBag.HataMesaji</div>
}

<div class="forms-wrapper">
    <div class="form-card">
        <h3>Kitap Ekle</h3>
        <form action="/Home/Kitaplar" method="post">
            <label>ISBN :</label>
            <input type="number" name="ISBN" maxlength="20" />
            <label>Kitap Adı :</label>
            <input type="text" name="KitapAdi" maxlength="200" />
            <label>Yazar Ad :</label>
            <input type="text" name="YazarAd" maxlength="50" />
            <label>Yazar Soyad :</label>
            <input type="text" name="YazarSoyad" maxlength="50" />
            <label>YayınEvi Adı :</label>
            <input type="text" name="YayinEviAdi" maxlength="100" />
            <label>Kategori :</label>
            <select name="KategoriAdi">
                <option disabled selected>Kategori Seçiniz.</option>
                @foreach (var item in Model.Kategoris)
                {
                    <option>@item.KategoriAdi</option>
                }
            </select>
            <label>Raf Numarası :</label>
            <input type="text" name="RafNumarasi" maxlength="20" />
            <label>Adet Sayısı :</label>
            <input type="number" name="AdetSayisi" />
            <label>Sayfa Sayısı :</label>
            <input type="number" name="SayfaSayisi" />
            <input type="submit" name="KitapEkle" value="Ekle" />
        </form>
    </div>

    <div class="form-card">
        <h3>Kategori Ekle</h3>
        <form action="/Home/Kitaplar" method="post">
            <label>Kategori Ad :</label>
            <input type="text" name="KategoriAdi" maxlength="100" />
            <label>Açıklama :</label>
            <input type="text" name="Aciklama" maxlength="200" />
            <input type="submit" name="KategoriEkle" value="Ekle" />
        </form>
    </div>


    @if (Model.SeciliKitap != null)
    {
        <div class="form-card">
            <h3>Kitap Güncelle</h3>
            <form action="/Home/Kitaplar" method="post">
                <label>ISBN :</label>
                <input type="number" name="ISBN" value="@Model.SeciliKitap.ISBN" maxlength="20" />
                <label>Kitap Adı :</label>
                <input type="text" name="KitapAdi" value="@Model.SeciliKitap.KitapAdi" maxlength="200" />
                <label>Yazar Ad :</label>
                <input type="text" name="YazarAd" value="@Model.SeciliKitap.YazarAd" maxlength="50" />
                <label>Yazar Soyad :</label>
                <input type="text" name="YazarSoyad" value="@Model.SeciliKitap.YazarSoyad" maxlength="50" />
                <label>YayınEvi Adı :</label>
                <input type="text" name="YayinEviAdi" value="@Model.SeciliKitap.YayinEviAdi" maxlength="100" />
                <label>Kategori : </label>
                <select name="KategoriAdi">
                    <option disabled selected>@Model.SeciliKitap.Kategori.KategoriAdi</option>
                    @foreach (var item in Model.Kategoris)
                    {
                        <option>@item.KategoriAdi</option>
                    }
                </select>
                <label>Raf Numarası :</label>
                <input type="text" name="RafNumarasi" value="@Model.SeciliKitap.RafNumarasi" maxlength="20" />
                <label>Adet Sayısı :</label>
                <input type="number" name="AdetSayisi" value="@Model.SeciliKitap.AdetSayisi" />
                <label>Sayfa Sayısı :</label>
                <input type="number" name="SayfaSayisi" value="@Model.SeciliKitap.SayfaSayisi" />
                <input type="submit" name="guncel" value="dene" />
            </form>
        </div>
    }
    </div>
    



@if (Model != null && Model.Kitaps.Any())
{
    <table>
        <tr>
            <td>ISBN</td>
            <td>Kitap Adı</td>
            <td>Yazar Ad</td>
            <td>Yazar Soyad</td>
            <td>YayınEvi Adı</td>
            <td>Kategori</td>
            <td>Raf Numarası</td>
            <td>Adet Sayısı</td>
            <td>Sayfa Sayısı</td>
            <td>OlusturmaTarihi</td>
            <td>GuncellemeTarihi</td>
            <td>Düzenle</td>
        </tr>
        @foreach (var item in Model.Kitaps)
        {
            if (item.AktifMi == true)
            {
                <tr height="35px">
                    <td width="35px">@item.ISBN</td>
                    <td>@item.KitapAdi</td>
                    <td>@item.YazarAd</td>
                    <td>@item.YazarSoyad</td>
                    <td>@item.YayinEviAdi</td>
                    <td>@item.Kategori.KategoriAdi</td>
                    <td>@item.RafNumarasi</td>
                    <td>@item.AdetSayisi</td>
                    <td>@item.SayfaSayisi</td>
                    <td>@item.OlusturmaTarihi</td>
                    <td>@item.GuncellemeTarihi</td>
                    <td>
                        <form action="/Home/Kitaplar" method="post">
                            <input type="hidden" name="ISBN" value="@item.ISBN" />
                            <input type="submit" name="KitapSil" value="Sil" />
                        </form>
                        <form action="/Home/Kitaplar" method="post">
                            <input type="hidden" name="ISBN" value="@item.ISBN" />
                            <input type="submit" name="Buls" value="Bul" />
                        </form>
                    </td>
                        
                    
                </tr>
            }
        }
    </table>
}
else
{
    <p>Gösterilecek kitap yok.</p>
}
