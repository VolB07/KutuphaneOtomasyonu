@{
    ViewBag.Title = "Nasıl Kullanılır";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Kütüphane Otomasyon Sistemi Kullanım Kılavuzu</h2>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4>1. Kitap İşlemleri</h4>
                </div>
                <div class="card-body">
                    <h5>Kitap Ekleme</h5>
                    <ul>
                        <li>Kitaplar sayfasına gidin</li>
                        <li>Kitap bilgilerini doldurun (ISBN, Kitap Adı, Yazar, Yayınevi vb.)</li>
                        <li>Kategori seçin veya yeni kategori ekleyin</li>
                        <li>"Ekle" butonuna tıklayın</li>
                    </ul>

                    <h5>Kitap Arama</h5>
                    <ul>
                        <li>ISBN numarasını girin</li>
                        <li>"Bul" butonuna tıklayın</li>
                    </ul>

                    <h5>Kitap Güncelleme</h5>
                    <ul>
                        <li>Kitabı bulun</li>
                        <li>Güncellenecek bilgileri değiştirin</li>
                        <li>"Güncelle" butonuna tıklayın</li>
                    </ul>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h4>2. Personel İşlemleri</h4>
                </div>
                <div class="card-body">
                    <h5>Personel Ekleme</h5>
                    <ul>
                        <li>Personeller sayfasına gidin</li>
                        <li>Personel bilgilerini doldurun (Ad, Soyad, Email, Şifre)</li>
                        <li>"Ekle" butonuna tıklayın</li>
                    </ul>

                    <h5>Personel Arama ve Güncelleme</h5>
                    <ul>
                        <li>Personel adını girerek arama yapın</li>
                        <li>Güncellenecek bilgileri değiştirin</li>
                        <li>"Güncelle" butonuna tıklayın</li>
                    </ul>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h4>3. Öğrenci İşlemleri</h4>
                </div>
                <div class="card-body">
                    <h5>Öğrenci Ekleme</h5>
                    <ul>
                        <li>Öğrenciler sayfasına gidin</li>
                        <li>Öğrenci bilgilerini doldurun</li>
                        <li>"Ekle" butonuna tıklayın</li>
                    </ul>

                    <h5>Öğrenci Arama ve Güncelleme</h5>
                    <ul>
                        <li>Öğrenci numarası veya adı ile arama yapın</li>
                        <li>Güncellenecek bilgileri değiştirin</li>
                        <li>"Güncelle" butonuna tıklayın</li>
                    </ul>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <h4>4. Ödünç Verme İşlemleri</h4>
                </div>
                <div class="card-body">
                    <h5>Kitap Ödünç Verme</h5>
                    <ul>
                        <li>Ödünç Verme sayfasına gidin</li>
                        <li>Öğrenci numarasını girin</li>
                        <li>Kitap ISBN numarasını girin</li>
                        <li>Ödünç verme tarihini seçin</li>
                        <li>"Ödünç Ver" butonuna tıklayın</li>
                    </ul>

                    <h5>Kitap İade Alma</h5>
                    <ul>
                        <li>İade edilecek kitabın bilgilerini girin</li>
                        <li>İade tarihini seçin</li>
                        <li>"İade Al" butonuna tıklayın</li>
                    </ul>
                </div>
            </div>

            <div class="alert alert-info">
                <h5>Önemli Notlar:</h5>
                <ul>
                    <li>Tüm işlemler için gerekli alanları eksiksiz doldurun</li>
                    <li>Kitap ve öğrenci bilgilerini güncel tutun</li>
                    <li>Ödünç verme ve iade işlemlerini zamanında yapın</li>
                    <li>Şifrenizi güvenli tutun ve düzenli olarak değiştirin</li>
                </ul>
            </div>
        </div>
    </div>
</div>

